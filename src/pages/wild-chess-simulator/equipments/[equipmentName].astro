---
import MainLayout from "../../../layouts/MainLayout.astro";
import EquipmentDataJsonFile from "../../../../public/data/EquipmentDataJsonFile.json";
//
export async function getStaticPaths() {
	return EquipmentDataJsonFile.equipmentDataJsonArray.map((entry) => ({
		params: {
			equipmentName: entry.Name.toLowerCase().split(" ").join("-"),
		},
		props: { equipment: entry },
	}));
}
//
const { equipment } = Astro.props;
---

<MainLayout topTitle={equipment.Name} />
