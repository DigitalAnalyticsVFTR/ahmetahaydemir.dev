---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";
import OriginDataJsonFile from "../../../public/OriginDataJsonFile.json";
import PageEntityGrid from "../../components/PageContent/PageEntityGrid.astro";
import PageEffectTable from "../../components/PageContent/PageEffectTable.astro";
//
export let entryMark = await getCollection("docs", (data) => {
	return data.id.includes("origin-base-document");
});
export let entryMarkFirst = entryMark[0];
export const markBaseURL = entryMarkFirst.slug.split("/").splice(0, 2).join("/");
const { Content, headings } = await entryMarkFirst?.render();
//
export async function getStaticPaths() {
	return OriginDataJsonFile.originDataJsonArray.map((entry) => ({
		params: {
			originName:
				markBaseURL + "/" + entry.Origin.toLowerCase().split(" ").join("-"),
		},
		props: { origin: entry, originString: entry.Origin.toLowerCase() },
	}));
}
//
const { originName } = Astro.params;
const { origin, originString } = Astro.props;
//
entryMarkFirst.data.title = origin.Origin;
---

<MainLayout headings={headings} {...entryMarkFirst.data}>
	<Content />
	<PageEffectTable effectArray={origin} />
	<PageEntityGrid gridFilter={originString} />
</MainLayout>
