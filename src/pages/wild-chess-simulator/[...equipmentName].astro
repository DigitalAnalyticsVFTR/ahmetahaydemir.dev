---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";
import EquipmentDataJsonFile from "../../../public/EquipmentDataJsonFile.json";
//
export let entryMark = await getCollection("docs", (data) => {
	return data.id.includes("equipment-base-document");
});
export let entryMarkFirst = entryMark[0];
export const markBaseURL = entryMarkFirst.slug.split("/").splice(0, 2).join("/");
const { Content, headings } = await entryMarkFirst?.render();
//
export async function getStaticPaths() {
	return EquipmentDataJsonFile.equipmentDataJsonArray.map((entry) => ({
		params: {
			equipmentName:
				markBaseURL + "/" + entry.Name.toLowerCase().split(" ").join("-"),
		},
		props: { equipment: entry, equipmentString: entry.Name.toLowerCase() },
	}));
}
//
const { equipmentName } = Astro.params;
const { equipment, equipmentString } = Astro.props;
//
entryMarkFirst.data.title = "Equipment - " + equipment.Name;
entryMarkFirst.data.description = entryMarkFirst.data.description + " - " + equipment.Name;
---

<MainLayout headings={headings} {...entryMarkFirst.data}>
	<Content />
</MainLayout>
