---
const { effectArray } = Astro.props;
---

<table class="effect-table">
	<tr>
		<th>Size</th>
		<th>Effect Description</th>
	</tr>
	{
		effectArray.EffectArray.map(
			(child: { SizeLimit: string; Description: string }) => {
				return (
					<tr>
						<td>{child.SizeLimit}</td>
						<td>{child.Description}</td>
					</tr>
				);
			}
		)
	}
</table>

<style>
	.effect-table {
		font-size: 1rem;
		margin-bottom: 1rem;
		border: 1px solid #ddd;
	}
	.effect-table tr:hover {
		background-color: var(--theme-bg-hover);
	}
	.effect-table th {
		background-color: var(--theme-selection-bg);
		font-weight: bolder;
		border-bottom: 1px solid #ddd;
		border-left: 1px solid #ddd;
	}
	.effect-table td {
		font-weight: bold;
		border-bottom: 1px solid #ddd;
		border-left: 1px solid #ddd;
	}
</style>
