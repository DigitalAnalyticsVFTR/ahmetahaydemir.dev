---
const { cardTitle, cardLink, cardLogo } = Astro.props;
---

<script>
  // Find all buttons with the `alert` class on the page.
  const cards = document.querySelectorAll("div.home-page-card");
  const links = document.querySelectorAll("div.home-page-card-link a");
  // Handle clicks on each button.
  for (let index = 0; index < cards.length; index++) {
    const element = cards[index];
    element.addEventListener("click", () => {
      window.location.href = links[index].toString();
    });
  }
</script>

<div class="home-page-card">
  <div class="home-page-card-logo">
    <img
      src={cardLogo}
      alt={cardTitle}
      loading="lazy"
      decoding="async"
      width="100"
      height="100"
    />
  </div>
  <div class="home-page-card-link">
    <a href={cardLink}>
      {cardTitle}
    </a>
  </div>
</div>

<style>
  .home-page-card {
    position: relative;
    display: grid;
    box-sizing: border-box;
    --column-min-width: 6rem;
    padding: 1rem;
    border-radius: 1rem;
    grid-template-columns: 1fr;
    align-items: center;
    justify-items: center;
    text-align: center;
    transition: ease-out 0.4s;
    transform: translateZ(0);
    inline-size: 200px;
    block-size: 175px;
    filter: drop-shadow(2px 4px 6px rgba(0, 0, 0, 0.75));
  }

  .home-page-card-link {
    align-items: center;
    justify-items: center;
    text-align: center;
    width: 100%;
    height: 100%;
    display: inherit;
  }

  .home-page-card-link a {
    overflow-wrap: break-word;
    font-size: larger;
    font-weight: bold;
    text-decoration: none;
    color: antiquewhite;
  }

  .home-page-card:hover {
    box-shadow: 0 20px 10px 0px rgba(0, 0, 0, 0.5);
    border-radius: 50px;
    border: dashed;
    border-color: darkgrey;
    background-color: rgb(0 0 0 / 30%);
    cursor: pointer;
    animation-direction: alternate;
    transition: ease-out 0.6s;
    transform: translateZ(0) translateY(-10px);
  }
</style>
